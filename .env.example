# Database
DATABASE_URL=postgresql://username:password@localhost:5432/shush_db
DB_API_KEY=<your-api-key-here>

# Server
PORT=8080
GIN_MODE=release

# JWT/Token Configuration
JWT_SECRET=your-super-secret-jwt-key-here
DEVICE_TOKEN_DURATION=720h    # 30 days
REFRESH_TOKEN_DURATION=2160h  # 90 days
OAUTH_TOKEN_BUFFER=5m         # Refresh 5 minutes before expiry

# Security Settings
MAX_DEVICES_PER_USER=10
TOKEN_CLEANUP_INTERVAL=24h
AUDIT_LOG_RETENTION=2160h     # 90 days
FAILED_LOGIN_RETENTION=720h   # 30 days
INACTIVE_DEVICE_CUTOFF=8760h  # 365 days

# Rate Limiting
ENABLE_RATE_LIMIT=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1h

# OAuth/OIDC Configuration
AUTH_PROVIDER=zitadel
OAUTH_ISSUER=https://shush-gwtate.us1.zitadel.cloud
AUTH_SERVICE_URL=https://shush-gwtate.us1.zitadel.cloud
CLIENT_ID=your-client-id-here
SCOPE=openid profile email

# Backend URL (for CLI client)
SHUSH_BACKEND_URL=http://localhost:8080

# Logging
LOG_LEVEL=info
